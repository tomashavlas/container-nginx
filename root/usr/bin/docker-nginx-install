#!/bin/bash

set -o errexit

function usage() {
    cat >&2 <<EOHELP

Usage:  $0 [CONFIGURE-FLAGS]

Build and install NGINX from source.
EOHELP

    exit 1
}

if [ $# -eq 1 -a "--help" == "${1:-}" ]; then
    usage
fi

if [ $# -gt 0 ]; then
    docker-nginx-configure "$@"
fi


pushd "${NGINX_SOURCE}"

make --jobs=$( nproc )
make --jobs=$( nproc ) install
make --jobs=$( nproc ) clean
find "${NGINX_CONF_PATH}" -iname '/*.default' -delete

popd

install --directory --group=0 --mode=0770 --owner=48 \
    "${HOME}" \
    "${NGINX_CONFD_PATH}" \
    "${NGINX_DEFAULTD_PATH}" \
    "${NGINX_LIB_PATH}" \
    "${NGINX_LOCK_PATH}" \
    "${NGINX_LOG_PATH}" \
    "${NGINX_RUN_PATH}"
